{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTextStyle": "white", //透明胶囊
				"navigationStyle": "custom",
				"navigationBarTitleText": "圈果",
				"enablePullDownRefresh": false,
				"onReachBottomDistance": 50,
				"backgroundTextStyle": "dark"
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				// "navigationStyle":"custom",
				"enablePullDownRefresh": false,
				"navigationBarTitleText": "找水果"

			}
		},
		{
			"path": "pages/selection/selection",
			"style": {
				"enablePullDownRefresh": false,
				"navigationBarTitleText": "选果标准"
				// "navigationStyle":"custom"
			}
		}, {

			"path": "pages/order/order",
			"style": {
				"enablePullDownRefresh": false,
				"navigationBarTitleText": "进货单"
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTextStyle": "white", //透明胶囊
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false,
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#666666",
		"selectedColor": "##00C94A",
		"borderStyle": "black", //底部导航边框
		"backgroundColor": "#fff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/index0.png",
				"selectedIconPath": "static/images/index1.png",
				"text": "首页"
			},
	
			{
				"pagePath": "pages/search/search",
				"iconPath": "static/images/search0.png",
				"selectedIconPath": "static/images/search1.png",
				"text": "找水果"
			},
			{
				"pagePath": "pages/selection/selection",
				"iconPath": "static/images/selection0.png",
				"selectedIconPath": "static/images/selection1.png",
				"text": "选果标准"
			},
			{
				"pagePath": "pages/order/order",
				"iconPath": "static/images/order0.png",
				"selectedIconPath": "static/images/order1.png",
				"text": "进货单"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/images/my0.png",
				"selectedIconPath": "static/images/my1.png",
				"text": "我的"
			}
		]
	}
}
